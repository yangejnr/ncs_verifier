FROM python:3.12-slim

RUN apt-get update \
    && apt-get install -y --no-install-recommends tesseract-ocr libgl1 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

COPY app ./app
COPY tests ./tests

ENV NCS_VERIFIER_DATA_DIR=/app/data
ENV NCS_VERIFIER_DATABASE_PATH=/app/data/verifier.db

RUN mkdir -p /app/data/references

EXPOSE 9001
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "9001", "--app-dir", "/app"]
